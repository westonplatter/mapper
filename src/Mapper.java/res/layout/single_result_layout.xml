<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_result"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/business_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/business_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/business_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/business_address"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/map_it"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/business_phone"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="70dp"
        android:text="Map It" />

    <Button
        android:id="@+id/get_directions"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/map_it"
        android:layout_alignBottom="@+id/map_it"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/map_it"
        android:layout_below="@+id/business_phone"
        android:layout_marginRight="25dp"
        android:text="Get Directions" />

    <Button
        android:id="@+id/save"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/map_it"
        android:layout_alignRight="@+id/get_directions"
        android:layout_below="@+id/get_directions"
        android:layout_marginTop="10dp" 
        android:onClick="saveToFavorites"    
        android:text="Add To Favorites" />

</RelativeLayout>